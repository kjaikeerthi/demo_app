- imap = @imap
%ul
  - (imap.search(['ALL'])[-25]..imap.search(['ALL'])[-1]).each do |message_id|
    - msg = imap.fetch(message_id,'RFC822')[0].attr['RFC822']
    - mail = Mail.new(msg)
    %li
      = mail.subject
      != mail.body rescue ""
      %hr
= link_to "Back to Project", project_path(@project.id)